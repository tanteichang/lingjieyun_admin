{
  "compilerOptions": {
    "target": "ES2022",
    "baseUrl": ".",
    "rootDir": "./server",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "@/*": ["../server/*"]
    },
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["./server/**/*.ts", "../server/types/**/*.d.ts"]
}
